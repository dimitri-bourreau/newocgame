{
  "name": "node-project",
  "version": "1.0.0",
  "description": "Template for a Node project.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/nodemon ./app.js",
    "test": "./node_modules/.bin/nyc -R spec --reporter=lcov --exclude '**/*.spec.js' ./node_modules/.bin/_mocha './{,!(node_modules)/**}/*.spec.js'",
    "sass-watch": "./node_modules/.bin/sass --watch ./styles/main.scss ./public/style.min.css --no-source-map --trace --style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobudim/node-template.git"
  },
  "keywords": [
    "node",
    "template"
  ],
  "author": "tobudim",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/tobudim/node-template/issues"
  },
  "homepage": "https://github.com/tobudim/node-template#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ejs": "0.0.2",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.0.1",
    "sass": "^1.26.10"
  },
  "dependencies": {
    "ejs": "^3.1.3",
    "express": "^4.17.1"
  }
