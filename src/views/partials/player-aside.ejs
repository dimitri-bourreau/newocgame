<%# Needed params: { id, name, turn } %>

<aside id="<%- id %>" class="player-aside col-md-2 card px-0 mb-5">
  <img
    class="card-img-top"
    src="/public/images/default.png"
    alt="Thomas Pesquet"
  />
  <div class="card-body px-4 text-center">
    <h5 class="player-name"></h5>

    <div id="player-stats">
      <p class="mt-3 mb-0">Santé</p>
      <div class="progress">
        <div
          class="progress-bar bg-danger"
          role="progressbar"
          style="width: 100%;"
          aria-valuenow="100"
          aria-valuemin="0"
          aria-valuemax="100"
        >100</div>
      </div>

      <div class="card px-0 mt-4">
        <div class="card-header">
          Arme
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <img
              class="img-thumbnail"
              src="/public/images/weapon-default.jpeg"
              alt="Poing"
            />
          </li>
          <li class="list-group-item weapon-name-damage">Poing: 10 dégâts</li>
        </ul>
      </div>

      <div 
        id="player-1-action" 
        class="card mt-4 text-center <%- turn ? 'bg-primary' : 'bg-secondary' %>"
      >
        <div class="card-body">
          <p class="text-light mb-0 player-turn-on">Vous pouvez vous déplacer</p>
          <p class="text-light mb-0 player-turn-off">Veuillez patienter que l'autre joueur ait joué.</p>
        </div
      </div>
    </div>
  </div>
</aside>
