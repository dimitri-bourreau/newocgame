<%# Needed params: { id, image, name, turn } %>

<aside id="<% id %>" class="player-aside col-md-2 card px-0">
  <img
    class="card-img-top"
    src="/public/images/<%- image %>"
    alt="Thomas Pesquet"
  />
  <div class="card-body px-4 text-center">
    <h5><% name %></h5>

    <div id="player-stats">
      <p class="mt-3 mb-0">Santé</p>
      <div class="progress bg-danger">
        <div
          class="progress-bar bg-danger"
          role="progressbar"
          style="width: 25%;"
          aria-valuenow="100"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          100
        </div>
      </div>

      <div class="card px-0 mt-4">
        <div class="card-header">
          Arme
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <img
              class="img-thumbnail"
              src="/public/images/weapon-fist.jpeg"
              alt="Poing"
            />
          </li>
          <li class="list-group-item">Poing: 10 dégâts</li>
        </ul>
      </div>

      <div id="player-1-action" class="card mt-4 text-center bg-primary">
        <div class="card-body">
          <% if (turn) { %>
            <p class="text-light mb-0">Vous pouvez vous déplacer</p>
          <% } else { %>
            <p class="text-light mb-0">Veuillez patienter que l'autre joueur est joué.</p>
          <% } %>
        </div
      </div>
    </div>
  </div>
</aside>
