<!DOCTYPE html>
<html lang="fr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/alert-site-is-not-responsive') %>

    <div id="game-wrapper" class="container d-none d-md-block mt-5">
      <div class="row">
        <% const player1 = { %>
          <% id: 'player-1', 'pesquet.png', 'Joueur 1','true' %>
        <% }; %>
        <%- include('../partials/player-aside', player1 ); %>

        <div id="title-and-board" class="col-md-8 text-center mb-5">
          <div id="board-game"></div>
          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-info mt-3"
            data-toggle="modal"
            data-target="#exampleModal"
          >
            Paramètres du jeu
          </button>

          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Paramètres du jeu
                  </h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h5>Recommencer la partie</h5>
                  <a href="#" id="restart-game-btn" class="btn btn-light"
                    >Recommencer la partie et perdre la partie en cours</a
                  >

                  <h5 class="mt-4">Changer la taille du plateau de jeu</h5>
                  <p>La partie recommancera</p>
                  <a href="/5/5" class="btn btn-light">5 x 5</a>
                  <a href="/10/10" class="btn btn-light">10 x 10</a>
                  <a href="/15/15" class="btn btn-light">15 x 15</a>
                  <a href="/20/20" class="btn btn-light">20 x 20</a>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-danger"
                    data-dismiss="modal"
                  >
                    Annuler
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <aside id="player-2" class="player-aside col-md-2 card px-0">
          <img
            class="card-img-top"
            src="/public/images/bauer.png"
            alt="Jack Bauer"
          />
          <div class="card-body px-4 text-center">
            <h5>Joueur 2</h5>

            <div id="player-stats">
              <p class="mt-3 mb-0">Santé</p>
              <div class="progress bg-danger">
                <div
                  class="progress-bar bg-danger"
                  role="progressbar"
                  style="width: 25%;"
                  aria-valuenow="100"
                  aria-valuemin="0"
                  aria-valuemax="100"
                >
                  100
                </div>
              </div>

              <div class="card px-0 mt-4">
                <div class="card-header">
                  Arme
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">
                    <img
                      class="img-thumbnail"
                      src="/public/images/weapon-fist.jpeg"
                      alt="Poing"
                    />
                  </li>
                  <li class="list-group-item">Poing: 10 dégâts</li>
                </ul>
              </div>

              <div
                id="player-1-action"
                class="card mt-4 text-center bg-secondary"
              >
                <div class="card-body">
                  <p class="text-light mb-0">Le joueur 1 joue</p>
                </div>
              </div>
            </div>
          </div>
        </aside>
      </div>
    </div>

    <%- include('../partials/script-tags'); %>
  </body>
</html>
